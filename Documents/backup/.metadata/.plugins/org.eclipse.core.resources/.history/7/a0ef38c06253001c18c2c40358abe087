package com.cart.controller;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.cart.model.Cart;
import com.cart.service.CartServiceImplementation;



@RestController
@RequestMapping("/cart")
public class CartController {
	
	@Autowired
	CartServiceImplementation cartServiceImplementation;
	//save the cartdetails
	
			@PostMapping("/savecart")
			public Cart save(@RequestBody Cart cart) {
			Cart c = cartServiceImplementation.save(cart);
			return c;
			}
			
			//find allcartdetails
			@GetMapping("/allcrop")
			public List<Cart> getAll(){
			return cartServiceImplementation.getAll();
			}
			
			//find the cartdetails by id
			@GetMapping("/allcart/{Id}")
			public Optional<Cart> getCropById(@PathVariable  String CropId){
			return cartServiceImplementation.getCartById(CropId);
			}
			
			//delete the cropdetails by id
			@DeleteMapping("/delcart/{Id}")
			public String deleteCart(@PathVariable String CropId) {
				cartServiceImplementation.deleteCart(CropId);
			return "Delete cartdetails with id: "+CropId;
			}
			
			//update the cropdetails by id
			@PutMapping("/update/{Id}")
			public String updateCart(@RequestBody Cart cart,@PathVariable String CropId) {
				cartServiceImplementation.getCartById(CropId);
				cartServiceImplementation.save(cart);
			return "Update cropdetails with id: "+CropId;

			}
	
}
