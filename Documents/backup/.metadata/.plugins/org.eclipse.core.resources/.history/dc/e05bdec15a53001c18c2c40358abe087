package com.cart.service;

import java.util.List;
import java.util.Optional;

import org.springframework.stereotype.Service;

import com.cart.model.Cart;
import com.cart.repository.CartRepository;
import com.example.model.Crop;

@Service
public class CartServiceImplementation implements CartService{
	
	private CartRepository cartRepository;
	
	//save cartdetails
	public Cart save(Cart cart) {
		Cart c=cartRepository.save(cart);
		return c;
	}
	
	//find all cartdetails
	public List<Cart> getAll(){
		return cartRepository.findAll();
	}
	
	//find the cartdetails by id
	public Optional<Cart> getCropById(String CropId){
		return cartRepository.findById(CropId);
		}
	
	//delete the cropdetails by id
	public String deleteCrop( String CropId) {
		cartRepository.deleteById(CropId);
		return "Delete cartdetails with id: "+CropId;
		}
	
	//update the cropdetails by id
	public String updateCrop( Cart crop, String CropId) {
		cartRepository.findById(CropId);
		cartRepository.save(crop);
		return "Update cartdetails with id: "+CropId;

		}
}
